startup_message off

backtick 1 1 1 $HOME/scripts/screen/screenrc.acpi.sh
backtick 2 3600 3600 $HOME/scripts/screen/screenrc.updates.archlinux.sh
bindkey -k k2 screen
bindkey -k k3 prev
bindkey -k k4 next
#bindkey -k k5 
bindkey -k k6 detach
bindkey -k k7 copy
bindkey -k k8 title
